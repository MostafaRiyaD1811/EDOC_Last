@model Document.ViewModels.JobPlanUpdateViewModel

@{
    ViewData["Title"] = "Create";
}



<style>

    .input-validation-error {
        border-bottom: 2px solid #FF5F5F !important;
        color: #FF5F5F;
        font-family: Pilat-demi;
    }

</style>

<main class="col-md-9 col-lg-10 col-sm-10 px-md-4" style=" width:90vw;">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 ">
        <h1 class="Req-title">JOP PLAN</h1>

    </div>
    <h2 class="subreq-title">Create New Request</h2>

    <div class="container-fluid">
        <div class="row align-items-stretch no-gutters contact-wrap">

            <!--<div class="row">
                <div class="col-md-4">-->

            <div class="form h-100">


                <form enctype="multipart/form-data" asp-action="Create">
                    <div asp-validation-summary="ModelOnly"></div>

                    <div class="form-group form-input">
                        <label asp-for="Description" class="control-label"></label>
                        <textarea asp-for="Description" class="form-control"></textarea>
                        <span asp-validation-for="Description"></span>
                    </div>
                    <div class="form-group form-input">
                        <label asp-for="RequiredAction" class="control-label"></label>
                        <select asp-for="RequiredAction" class="form-select">
                            <option asp-for="RequiredAction" value="Update">Update</option>
                            <option asp-for="RequiredAction" value="Deactivate">Deactivate</option>
                            <option asp-for="RequiredAction" value="New">New</option>
                        </select>
                        <span asp-validation-for="RequiredAction"></span>
                    </div>
                    <div class="form-group form-input">
                        <label asp-for="JobPlanCode" class="control-label"></label>
                        <input asp-for="JobPlanCode" class="form-control" />
                        <span asp-validation-for="JobPlanCode"></span>
                    </div>
                    <div class="form-group form-input">
                        <label asp-for="OldJobInterval" class="control-label"></label>
                        <input asp-for="OldJobInterval" class="form-control" />
                        <span asp-validation-for="OldJobInterval"></span>
                    </div>
                    <div class="form-group form-input">
                        <label asp-for="NewJobInterval" class="control-label"></label>
                        <input asp-for="NewJobInterval" class="form-control" />
                        <span asp-validation-for="NewJobInterval"></span>
                    </div>
                    <div class="form-group form-input">
                        <label asp-for="MaterialsRemoved" class="control-label"></label>
                        <input asp-for="MaterialsRemoved" class="form-control" />
                        <span asp-validation-for="MaterialsRemoved"></span>
                    </div>
                    <div class="form-group form-input">
                        <label asp-for="MaterialsAdded" class="control-label"></label>
                        <input asp-for="MaterialsAdded" class="form-control" />
                        <span asp-validation-for="MaterialsAdded"></span>
                    </div>
                    <div class="form-group form-input">
                        <label asp-for="AssetCode" class="control-label"></label>
                        <input asp-for="AssetCode" class="form-control" />
                        <span asp-validation-for="AssetCode"></span>
                    </div>
                    <div class="form-group form-input">
                        <label asp-for="AssetType" class="control-label"></label>
                        <input asp-for="AssetType" class="form-control" />
                        <span asp-validation-for="AssetType"></span>
                    </div>
                    <div class="form-group form-input">
                        <label asp-for="Attachments" class="custom-file-label"></label>
                        <input asp-for="Attachments" multiple class="form-control custom-file-input" />
                        <span asp-validation-for="Attachments"></span>
                        <span style="color:green">@Html.Raw(ViewBag.Message)</span>
                    </div>





                    <div class="form-group1 form-input ">

                        <input type="submit" value="Submit" class="btn-gradient-submit" style="margin-left:90%" />
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
