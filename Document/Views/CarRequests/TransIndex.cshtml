@model IEnumerable<Document.Models.CarRequest>

@{
    ViewData["Title"] = "Index";
}

<style>
    .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
    }

    @@media (min-width: 768px) {
        .bd-placeholder-img-lg {
            font-size: 3.5rem;
        }
    }

</style>


<main class="col-md-9 col-lg-10 col-sm-10 px-md-4" style=" width:90vw;">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
        <h1 class="Req-title">CAR REQUESTS</h1>
        
    </div>
    <h2 class="subreq-title">Inbox</h2>


    <div class="row align-items-stretch no-gutters contact-wrap">
        <div class="form h-100">
            <div class="table-responsive">
                <span class="d-flex justify-content-end pb-3">
                    <form method="get" asp-action="Index">
                        <div class="input-group">
                            <button type="submit" class="btn-search btn-outline-primary btn-sm"> <img src="~/Images/image.png" style="width: 2rem;" class="m-2" /> </button>
                            <input type="number" class="Search-box" placeholder="Request Number" name="searching" />
                        </div>
                    </form>
                </span>
                <table class="table my-2">
                    <thead>
                        <tr class="th">
                            <th>
                                @Html.DisplayNameFor(model => model.RequesterName)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Name)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DepartureAddress)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.DestinationAddress)
                            </th>

                            <th>
                                @Html.DisplayNameFor(model => model.Justification)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Status)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CurrentReview)
                            </th>


                            <th>
                                @Html.DisplayNameFor(model => model.AttachmentPath)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.CreationDate)
                            </th>

                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        @if (Model.Count() == 0)
                        {
                            <tr>
                                <td colspan="15" class="nodatayet">

                                    There's no requests yet

                                </td>

                            </tr>
                        }
                        else
                        {
                            foreach (var item in Model)
                            {

                                <tr class="even">

                                    <td>
                                        @Html.DisplayFor(modelItem => item.RequesterName)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.Name)
                                    </td>


                                    <td>
                                        @Html.DisplayFor(modelItem => item.DepartureAddress)
                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.DestinationAddress)
                                    </td>



                                    <td>
                                        @Html.DisplayFor(modelItem => item.Justification)
                                    </td>

                                    <td>
                                        @if (item.Status == "Approved")
                                        {
                                            <div class="approved">
                                                @Html.DisplayFor(modelItem => item.Status)
                                            </div>
                                        }
                                        else if (item.Status == "Declined")
                                        {
                                            <div class="declined">
                                                @Html.DisplayFor(modelItem => item.Status)
                                            </div>
                                        }
                                        else if (item.Status == "Pending")
                                        {
                                            <div class="pending">
                                                @Html.DisplayFor(modelItem => item.Status)
                                            </div>
                                        }

                                    </td>

                                    <td>
                                        @Html.DisplayFor(modelItem => item.CurrentReview)
                                    </td>



                                    <td>
                                        <a asp-action="Download" id="details" class="btn-download btn-sm btn-outline-secondary" asp-route-fileName="@item.AttachmentPath" asp-route-id="@item.ReqNumber">Download</a>

                                    </td>
                                    <td>
                                        @Html.DisplayFor(modelItem => item.CreationDate)
                                    </td>

                                   
                                        <td>
                                            <div class="btn-group me-2">
                                                <a asp-action="Details" class="btn btn-sm btn-outline-secondary details" asp-route-id="@item.Id">Details</a>

                                            </div>
                                        </td>
                                    

                                </tr>
                            }

                        }
                    </tbody>
                </table>

            </div>
        </div>

    </div>
</main>


