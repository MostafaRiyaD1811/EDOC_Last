            </div>

            <div id="ifYes" style="display: none;" class="form-group">
                <label asp-for="OtherNotes" class="control-label">Other Notes</label>
                <textarea asp-for="OtherNotes" class="form-control"></textarea>
                <span asp-validation-for="Type" ></span>
            </div>
            <br />
            <div style="margin-left:90%">
                        <input type="submit" value="Submit" class="btn-gradient-submit" />
                    </div>
        </form>
    </div>
</div>
</div></main>

@section Scripts {
    <script>
        function yesnoCheck(that) {
    if (that.value == "other") {

        document.getElementById("ifYes").style.display = "block";
    } else {
        document.getElementById("ifYes").style.display = "none";
    }
}

</script>
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
