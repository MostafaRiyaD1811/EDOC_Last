@model IEnumerable<Document.Models.Voucher>

@{
    ViewData["Title"] = "HRReviewerIndex";
}
<main class="col-md-9 col-lg-10 col-sm-10 px-md-4" style=" width:90vw;">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3 ">
        <h1 class="Req-title">VOUCHERS</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <a asp-action="Create" class="btn-gradient-create">CREATE NEW</a>
            </div>
        </div>
    </div>
    <h2 class="subreq-title">Inbox</h2>


    <div class="row align-items-stretch no-gutters contact-wrap">
        <div class="form h-100">
            <div class="table-responsive">
                <span class="d-flex justify-content-end pb-3">
                    <form method="get" asp-action="HRReviewerIndex">
                        <div class="input-group">
                            <button type="submit" class="btn-search btn-outline-primary btn-sm"> <img src="~/Images/image.png" style="width: 2rem;" class="m-2" /> </button>
                            <input class="Search-box" placeholder="Vendor Name" name="searching" />
                        </div>
                    </form>
                </span>
                <table class="table table-striped text-center my-2">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.VendorName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VendorNum)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Amount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.InvoiceDate)
            </th>            
            <th>
                @Html.DisplayNameFor(model => model.BeneficiaryName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CreatedAt)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Approved)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ApprovalNotes)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Type)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.VoucherCurrency)
            </th>           
            <th>
                @Html.DisplayNameFor(model => model.CurrentReviewerId)
            </th>
            <th>
                <p> voucher Details</p>
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
            if (item.HRReviewerStatuts == HRReviewerStatuses.Pending)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.VendorName)
                    </td>
                    <td>
                                        @Html.DisplayFor(modelItem => item.VendorNum)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceDate)
                    </td>
                    

                    <td>
                        @Html.DisplayFor(modelItem => item.BeneficiaryName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CreatedAt)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Approved)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.ApprovalNotes)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Type)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VoucherCurrency)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.CurrentReviewerId)
                    </td>
                    <td>
                        <a asp-action="Files" class="btn btn-secondary btn-sm" asp-route-id="@item.ReqNumber">Download</a>
                    </td>
                     <td>
                         <div class="btn-group me-2">
                             <a asp-action="Details" class="btn btn-sm btn-outline-secondary details" asp-route-id="@item.Id">Details</a>
                             <a asp-action="HRReviewerEdit" id="edit" class="btn btn-sm btn-outline-secondary approve" asp-route-id="@item.Id">Action</a>
                         </div>
                     </td>  
                   
                </tr>
            }
       
}
    </tbody>
</table>
            </div>
        </div>
    </div>
</main>