@model IEnumerable<Document.Models.Requester>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<style>
    .bd-placeholder-img {
        font-size: 1.125rem;
        text-anchor: middle;
        -webkit-user-select: none;
        -moz-user-select: none;
        user-select: none;
    }

    @@media (min-width: 768px) {
        .bd-placeholder-img-lg {
            font-size: 3.5rem;
        }
    }

</style>


<main class="col-md-9 col-lg-10 col-sm-10 px-md-4" style=" width:90vw;">
    <div class="d-flex justify-content-between flex-wrap flex-md-nowrap align-items-center pt-3 pb-2 mb-3">
        <h1 class="Req-title">CAR REQUESTS</h1>
        <div class="btn-toolbar mb-2 mb-md-0">
            <div class="btn-group me-2">
                <a asp-action="Create" class="btn-gradient-create">CREATE NEW</a>
            </div>
        </div>
    </div>
    <h2 class="subreq-title">Inbox</h2>


    <div class="row align-items-stretch no-gutters contact-wrap">
        <div class="form h-100">
            <div class="table-responsive">
                <span class="d-flex justify-content-end pb-3">
                    <form method="get" asp-action="Index">
                        <div class="input-group">
                            <button type="submit" class="btn-search btn-outline-primary btn-sm"> <img src="~/Images/image.png" style="width: 2rem;" class="m-2" /> </button>
                            <input type="number" class="Search-box" placeholder="User Number" name="searching" />
                        </div>
                    </form>
                </span>
                <table class="table my-2">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Dept)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MgrName)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.LDap)
            </th>
            
            <th>Actions</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Dept)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MgrName)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.LDap)
            </td>
           
            <td>
                @Html.DisplayFor(modelItem => item.HRUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HRReviewer)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.HRMgr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinanceInitiator)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinanceReviewr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.FinanceMgr)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TechnicalPlanning)
            </td>
            
            <td>
                @Html.DisplayFor(modelItem => item.Manager.EmployeeCode)
            </td>
           <td>
                                            <div class="btn-group me-2">
                                                <a asp-action="Details" class="btn btn-sm btn-outline-secondary details" asp-route-id="@item.EmployeeCode">Details</a>
                                        <a asp-action="Edit" class="btn btn-sm btn-outline-secondary edit" asp-route-id="@item.EmployeeCode">Edit</a>
                                        <a asp-action="Delete" class="btn btn-sm btn-outline-secondary delete" asp-route-id="@item.EmployeeCode">Delete</a>
                                            </div>
                                        </td>
        </tr>
}
    </tbody>
</table>
            </div>
        </div>
    </div>
</main>
